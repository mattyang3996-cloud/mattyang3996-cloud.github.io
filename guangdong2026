    <!-- JavaScript Logic -->
    <script>
        // State Management
        const state = {
            currentTab: 'dashboard'
        };

        // Data Models
        const structureData = {
            title: {
                title: "标题 (Title)",
                words: "1行",
                content: "<strong>原则：</strong> 简明扼要，体现总论点。<br><strong>公式：</strong> <br>1. 主题 + 之道/之路/之钥 (如：<em>走好高质量发展之路</em>)<br>2. 动宾式 (如：<em>提振干事创业精气神</em>)<br>3. 对仗式 (如：<em>不仅要'面子'靓，更要'里子'实</em>)"
            },
            intro: {
                title: "第一段：开头 (Introduction)",
                words: "150字左右",
                content: "<strong>目标：</strong> 引出话题 + 亮明观点。<br><strong>模板：</strong> <br>“...（社会现象/背景）。然而...（指出问题/机遇）。因此，唯有...（总论点），方能...（意义）。”<br><strong>技巧：</strong> 引用名言（习近平语录）能瞬间提升档次。"
            },
            body1: {
                title: "第二段：分论点一 (Argument 1)",
                words: "250-300字",
                content: "<strong>结构：</strong> <br>1. <strong>分论点句：</strong> 放在段首，单独成句。<br>2. <strong>过渡分析：</strong> 解释分论点为何重要（道理论证）。<br>3. <strong>举例论证：</strong> 结合材料或自身积累的案例。<br>4. <strong>回扣分析：</strong> 总结案例，再次强调分论点。"
            },
            body2: {
                title: "第三段：分论点二 (Argument 2)",
                words: "250-300字",
                content: "<strong>逻辑关系：</strong> 分论点之间通常是并列关系或递进关系。<br><strong>内容重点：</strong> 如果分论点一是“思想层面”，分论点二可以是“制度层面”或“行动层面”。<br><strong>注意：</strong> 保持句式与上一段大致整齐，形成排比气势。"
            },
            body3: {
                title: "第四段：分论点三 (Argument 3)",
                words: "250-300字",
                content: "<strong>深度挖掘：</strong> 最后一个分论点往往需要升华，比如从“个人/企业”上升到“国家/民族”高度。<br><strong>备选策略：</strong> 如果只有两个核心对策，这一段可以用作“驳论”或“补充论证”，或者写成过渡段（不建议新手尝试，建议保持3个分论点）。"
            },
            conclusion: {
                title: "第五段：结尾 (Conclusion)",
                words: "150字左右",
                content: "<strong>目标：</strong> 总结全文 + 升华主题 + 展望未来。<br><strong>禁忌：</strong> 烂尾、口号空洞。<br><strong>模板：</strong> <br>“综上所述...（重申总论点）。...（回扣分论点）。让我们...（呼吁行动），共同谱写...新篇章！”"
            }
        };

        const logicSteps = [
            {
                id: 1,
                title: "第1步：审题意 (定位题眼)",
                content: "<ul class='list-disc list-inside space-y-2 text-stone-700'><li><strong>审文种：</strong> 是策论文（重对策）还是政论文（重分析）？广东卷近年多为<strong>策论文</strong>，强调解决实际问题。</li><li><strong>审对象：</strong> 题目要求围绕什么主题？（如“高质量发展”、“乡村振兴”）。</li><li><strong>审问数：</strong> 有几个具体要求？是否要求“结合给定材料”？</li><li><strong>技巧：</strong> 圈出题干中的关键词，这往往就是总论点的核心词汇。</li></ul>"
            },
            {
                id: 2,
                title: "第2步：理材料 (梳理逻辑)",
                content: "<ul class='list-disc list-inside space-y-2 text-stone-700'><li><strong>全篇速读：</strong> 每一则材料通常对应一个问题表现、原因或对策。</li><li><strong>分类归纳：</strong> 比如材料1-3是讲“问题”，材料4-5是讲“外地经验”，材料6是“本地政策”。</li><li><strong>找对策词：</strong> 重点关注材料中的动词（建立、完善、推进、加强），这些直接可以转化为分论点。</li></ul>"
            },
            {
                id: 3,
                title: "第3步：定论点 (总分结构)",
                content: "<ul class='list-disc list-inside space-y-2 text-stone-700'><li><strong>总论点：</strong> 必须包含题干关键词，且是一句完整的判断句。</li><li><strong>分论点来源：</strong> <br>1. <strong>根据材料推导：</strong> 材料讲了三个方面，就提三个分论点。<br>2. <strong>万能维度：</strong> 制度、人才、技术、文化、监管。<br>3. <strong>逻辑维度：</strong> 认识（思想）- 实践（行动）- 保障（机制）。</li></ul>"
            },
            {
                id: 4,
                title: "第4步：充血肉 (论证方法)",
                content: "<ul class='list-disc list-inside space-y-2 text-stone-700'><li><strong>例证法：</strong> 使用材料中的例子（需缩写）或社会热点。</li><li><strong>理证法：</strong> 分析原因、影响、必要性。</li><li><strong>引证法：</strong> 引用习近平总书记讲话、古诗词。</li><li><strong>排比法：</strong> 增强气势。</li></ul>"
            }
        ];

        // Initialization
        document.addEventListener('DOMContentLoaded', () => {
            initRadarChart();
            initPieChart();
            // Default load
            updateStructureInfo('title'); 
        });

        // Navigation Function
        function switchTab(tabId) {
            // Update State
            state.currentTab = tabId;
            
            // UI Updates
            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('tab-active', 'text-stone-800');
                btn.classList.add('text-stone-500');
            });
            document.getElementById(`nav-${tabId}`).classList.add('tab-active');
            document.getElementById(`nav-${tabId}`).classList.remove('text-stone-500');

            // View Updates
            ['dashboard', 'logic', 'structure', 'material'].forEach(view => {
                const el = document.getElementById(`view-${view}`);
                if (view === tabId) {
                    el.classList.remove('hidden');
                    // Simple animation
                    el.classList.add('animate-fade-in');
                } else {
                    el.classList.add('hidden');
                }
            });
        }

        // Structure Info Updater
        function updateStructureInfo(key) {
            const data = structureData[key];
            const panel = document.getElementById('structure-content');
            
            // Highlight active block
            // (In a full React app, this would be state-driven styles. Here we rely on content update)
            
            panel.innerHTML = `
                <div class="animate-fade-in">
                    <h4 class="text-xl font-bold text-amber-800 mb-2">${data.title}</h4>
                    <span class="inline-block bg-stone-100 text-stone-500 text-xs px-2 py-1 rounded mb-4">建议篇幅：${data.words}</span>
                    <div class="text-stone-700 leading-relaxed space-y-2">${data.content}</div>
                </div>
            `;
        }

        // Logic Step Updater
        function showLogicDetail(id) {
            const step = logicSteps.find(s => s.id === id);
            const contentDiv = document.getElementById('logic-detail-content');
            
            // Update visual active state of circles
            document.querySelectorAll('.step-item > div:first-child').forEach((el, index) => {
                if (index + 1 === id) {
                    el.classList.remove('bg-stone-200', 'text-stone-600');
                    el.classList.add('bg-amber-600', 'text-white');
                } else {
                    el.classList.add('bg-stone-200', 'text-stone-600');
                    el.classList.remove('bg-amber-600', 'text-white');
                }
            });

            contentDiv.innerHTML = `
                <h4 class="text-xl font-bold text-amber-800 mb-2">${step.title}</h4>
                ${step.content}
            `;
        }

        // Material Toggle
        function toggleAnswer() {
            const el = document.getElementById('material-answer');
            el.classList.toggle('hidden');
        }

        // Chart Initialization
        function initRadarChart() {
            const ctx = document.getElementById('radarChart').getContext('2d');
            new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['观点明确性', '论证逻辑性', '结合材料度', '结构完整性', '语言规范性', '政治高度'],
                    datasets: [{
                        label: '高分卷画像',
                        data: [9, 8.5, 8, 9, 7.5, 8.5],
                        fill: true,
                        backgroundColor: 'rgba(180, 83, 9, 0.2)',
                        borderColor: 'rgb(180, 83, 9)',
                        pointBackgroundColor: 'rgb(180, 83, 9)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(180, 83, 9)'
                    }, {
                        label: '平均卷画像',
                        data: [7, 5, 5, 8, 6, 4],
                        fill: true,
                        backgroundColor: 'rgba(120, 113, 108, 0.2)',
                        borderColor: 'rgb(120, 113, 108)',
                        pointBackgroundColor: 'rgb(120, 113, 108)',
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { display: true },
                            suggestedMin: 0,
                            suggestedMax: 10
                        }
                    },
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        function initPieChart() {
            const ctx = document.getElementById('pieChart').getContext('2d');
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['审题立意 (6-8min)', '列提纲 (10min)', '正文书写 (40min)', '检查修正 (2-4min)'],
                    datasets: [{
                        data: [10, 15, 70, 5],
                        backgroundColor: [
                            'rgb(59, 130, 246)', // Blue
                            'rgb(245, 158, 11)', // Amber
                            'rgb(16, 185, 129)', // Emerald
                            'rgb(168, 162, 158)' // Stone
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false } // Hide standard legend to use custom HTML one
                    }
                }
            });
        }

    </script>
    
    <style>
        /* Embedded CSS for simple animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.4s ease-out forwards;
        }
    </style>
